{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "ssm:GetParameters"
            ],
            "Resource": [
                "arn:aws:kms:eu-west-1:*:key/alias/aws/ssm",
                "arn:aws:ssm:eu-west-1:*:parameter/myapp/prod/password"
            ]
        }
    ]
}

